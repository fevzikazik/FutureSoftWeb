
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@using FutureSoftWeb.Models;
@model IEnumerable<tbl_Kategori>

<div class="container marketing">
    <h2 class="itemsTitle">Breakfast</h2>
    <div id="myCarousel1" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var styleClass = "";
                if (i == 0)
                {
                    styleClass = "active";
                }
                <div class="item @styleClass">
                    <div class="row">
                        @for (int j = 0; j < 5; j++)
                        {

                            <div class="col-lg-4">
                                <img src="~/Content/themes/assets/images/salate.png" alt="Generic placeholder image">
                                <h4>@j</h4>
                                <p><a class="btn btn-default" href="#" role="button">Goruntule »</a></p>
                            </div>
                        }

                    </div><!-- /.row -->

                </div>
            }

        </div>
        <a class="left carousel-control" href="#myCarousel1" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#myCarousel1" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div><!-- /.carousel -->
</div>